<h1>book detail</h1>
<div class="post-body">
  <p>Book：<%= @book.title %></p>
  <p>Opinion：<%= @book.body %></p>
  <p>ユーザーネーム：<%= @book.user.name %></p>
  <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <% if @book.user == current_user %>
    <%= link_to "delete", book_path(@book), method: :delete %>
  <% end %>
</div>